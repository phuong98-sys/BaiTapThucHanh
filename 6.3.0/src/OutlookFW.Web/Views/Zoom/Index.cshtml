@{
    ViewBag.Title = L("Zoom");
    ViewBag.ActiveMenu = "Zoom"; //Matches with the menu name in SimpleTaskAppNavigationProvider to highlight the menu item
}

@model  OutlookFW.Web.Models.Outlooks.IndexViewMail


@section styles {
    @*<link href="~/Views/Outlook/Index.css" rel="stylesheet" />*@
    <link href="~/Views/Zoom/Index.css" rel="stylesheet" />
}

@section scripts
{
    <environment names="Development">

        <script src="~/Views/Zoom/Index.js"></script>

    </environment>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker2').datetimepicker({
                locale: 'ru'
            });
        });
    </script>
}
<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="jumbotron">


    <button id="btnLogin">Login Zoom</button>
    @*<button id="btnSchedule" data-toggle="modal" data-target="#myModal">Schedule a meeting</button>

        <button id="btnLogout">Logout</button>*@

</div>


<!--Modal Send Email-->
<div class="panel-heading">

    <div>
        <!--Modal Send Email-->
        <div class="modal fade" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">

                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4>Schedule a meeting</h4>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "sendEmailAPI" }))
                        {
                            @*@Html.AntiForgeryToken()*@

                            <div class="content" style="color:black;">

                                <div class="content-body">
                                    <form method="post">

                                        <div class="form-group">
                                            Topic
                                            <div class="group-input">
                                                @Html.TextBox("Topic", "", new { htmlAttributes = new { @class = "form-control" }, required = "required", style = "max-width:100%; width:100%;height:25px;" })
                                                @Html.ValidationMessage("Topic", "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            Start Time
                                            @Html.Label("", htmlAttributes: new { @class = "g-control-label" })
                                            <div class="group-input">
                                                <input name="StartTime" id="StartTime" class="form-control" type="date" required="required" style="max-width:100%; border: 1px solid black" />
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            Time 1
                                            @Html.Label("", htmlAttributes: new { @class = "g-control-label" })
                                            <div class="group-input">
                                                <input name="StartTime" id="StartTime" class="form-control" type="number" required="required" style="max-width:100%; border: 1px solid black" />
                                            </div>

                                        </div>
                                        @*<div class="form-group">
                                                End Time
                                                @Html.Label("", htmlAttributes: new { @class = "g-control-label" })
                                                <div class="group-input">
                                                    <input name="EndTime" id="Time" class="form-control" type="date" required="required" style="max-width:100%; border: 1px solid black" />
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                Time 2
                                                @Html.Label("", htmlAttributes: new { @class = "g-control-label" })
                                                <div class="group-input">
                                                    <input name="StartTime" id="StartTime" class="form-control" type="number" required="required" style="max-width:100%; border: 1px solid black" />
                                                </div>

                                            </div>*@
                                        <div class="form-group">
                                            Password
                                            <div class="group-input">
                                                @Html.TextBox("Password", "", new { htmlAttributes = new { @class = "form-control" }, required = "required", style = "max-width:100%; width:100%;height:25px;" })
                                                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            Description
                                            <div class="group-input">
                                                @Html.TextArea("Description", "", new { htmlAttributes = new { @class = "form-control" }, required = "required", style = "max-width:100%; width:100%;height:30px;" })
                                                @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </form>
                                    <div class="g-panel-footer">
                                        <div class="g-panel-footer g-right">
                                            <button type="submit" name="submit" id="btnSaveSchedule" value="Accept" class="btn btn-default" style="color:#fff; background-color:#0094ff">Save</button>
                                            <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        </div>

                                    </div>
                                </div>

                            </div>

                        }
                    </div>

                </div>
            </div>
        </div>    <!--Model send Email-->

    </div>
</div>
