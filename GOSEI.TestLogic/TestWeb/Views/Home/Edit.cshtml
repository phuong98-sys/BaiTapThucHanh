
@{ ViewBag.Title = "Edit"; }


@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<TestWeb.Models.ListQualification>
@*@model  TestWeb.Models.Employee*@
@*@model  TestWeb.ViewModel.DetailViewModel*@

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/assets/css/common/common.css" rel="stylesheet" />
<link href="~/assets/css/common/grid.css" rel="stylesheet" />
<link href="~/assets/css/common/button.css" rel="stylesheet" />
<link href="~/assets/css/common/input.css" rel="stylesheet" />
<link href="~/assets/css/pages/employee.css" rel="stylesheet" />
@*@modelt  EmployeeQualification.Models.EmployeeQualification*@

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
                <div>
                    <h2>Thêm nhân viên mới</h2>

                    <div class="form-horizontal">
                        <form action="/Home/Edit" method="post">
                            <div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.Hidden("Id", new { id = ViewBag.id, @value = ViewBag.id })
                                @*@if (ViewBag.Success != null)
                                    {<div class="alert  alert-success">@ViewBag.Success</div>}
                                    @if (ViewBag.isValid != true)
                                    {<div class="alert  alert-success">@ViewBag.Success</div>}*@
                            </div>

                            <hr />
                            @*  @Html.HiddenFor(model => model.Id=1)*@
                            <div class="form-group">
                                @Html.Label("FirstName", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBox("FirstName", new { @class = "form-control" })
                                    @Html.ValidationMessage("FirstName", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("MiddleName", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.Editor("MiddleName", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessage("MiddleName", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("LastName", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control", @value = ViewBag.lastName } })
                                    @Html.ValidationMessage("LastName", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("Gender", new List<SelectListItem>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            {
                                    new SelectListItem{ Text="Male", Value="Male"},
                                    new SelectListItem{ Text="Female", Value="Female"} }, new { @class = "form-control", @value = ViewBag.gender })
                                    @Html.ValidationMessage("Gender", "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("BirthDate", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.Editor("BirthDate", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessage("BirthDate", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBox("Email", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Note", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextArea("Note", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessage("Note", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">

                                    <input type="submit" value="save" class="btn btn-default" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <button>
                        @Html.ActionLink("Hủy bỏ", "Index")
                    </button>
                </div>

                                <div class="content">
                                    <div class="content-header">
                                        <div class="content-header-text">Employees</div>
                                        <button class="btn-content-header" style="color:#fff">
                                            @Html.ActionLink("ADD", "Add", "Qualifications", new { id = ViewBag.id }, null)
                                        </button>
                                    </div>
                                    <div class="grid">
                                        <table>
                                            <colgroup>
                                                <col width="50" />
                                                <col width="150" />
                                                <col width="150" />
                                                <col width="100" />
                                                <col width="200" />
                                                <col width="300" />
                                            </colgroup>
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Name</th>
                                                    <th>Institution</th>
                                                    <th>City</th>
                                                    <th>Valid Form</th>
                                                    <th>Valid To</th>
                                                    <th>Is Valid?</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (TestWeb.Models.ListQualification it in Model)
                                                {
                                                <tr>


                                                    <td>
                                                        1
                                                    </td>
                                                    <td>
                                                        @*@Html.DisplayFor(x => x.Name)*@
                                                        @it.Name;
                                                    </td>

                                                    @*<td>
                                                        @Html.DisplayFor(x => item.Institution)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(x => item.Qualification)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(x => item.QualificationId)
                                                    </td>*@


                                                </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>


                                    <div class="paging">

                                        @*  Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount*@

                                        @Html.PagedListPager(Model, page => Url.Action("Edit", "Home",
                                    new { id=ViewBag.id , firstName=ViewBag.firstName , lastName=ViewBag.lastName , birthDate=ViewBag.birthDate, page }))
                                    </div>
                                    </div>
                                    }
